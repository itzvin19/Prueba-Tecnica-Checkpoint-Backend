generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id             Int    @id @default(autoincrement())
  nombre         String
  descripcion    String
  precio         Int
  imagen         String
  leadsGenerados Int    @default(0)
}

